{
  "name": "bat-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "frontend:dev": "cd packages/frontend && npx next dev",
    "frontend:build": "cd packages/frontend && npx next build",
    "frontend:start": "cd packages/frontend && npx next start",
    "frontend:lint": "cd packages/frontend && npx next lint",
    "backend:init": "cd packages/backend && npx cdk init",
    "backend:bootstrap": "cd packages/backend && npx cdk bootstrap",
    "backend:deploy": "cd packages/backend && npx cdk deploy --all"
  },
  "workspaces": [
    "packages/*"
  ]
}
